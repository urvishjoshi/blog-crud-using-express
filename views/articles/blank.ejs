<%- include('../layouts/head') %> 

<body>
    <section>
        <div class="container">
            <div>
                <h2 class="text-center my-3">Blog with MEN</h2>
            </div>
            <div class="text-center"><%= page %>  post</div>
            <div class="w-50 my-3 mx-auto">

                <form action="/articles/<%= page=='Create'?'':`${article.id}?_method=PUT` %>" method="post">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" name="title" id="title" value="<%= article.title %>">
                            </div>
                            <div class="form-group">
                                <label for="description" class="form-label">Description</label>
                                <input type="text" class="form-control" name="description" id="description" value="<%= article.description %>">
                            </div>
                            <a class="btn btn-secondary" href="/articles">Cancel</a>
                            <button class="btn btn-primary"><%= page %> </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </section>
</body>

</html>